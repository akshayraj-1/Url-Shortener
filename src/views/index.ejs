<%- layout('layout/boilerplate') -%>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 px-6 md:px-40 h-full w-full min-h-screen py-40">
    <div class="flex flex-col justify-center items-start gap-5 h-full w-full">
        <h1 class="relative text-[55px] md:text-[5.1rem] leading-none font-gelica-black font-bold">
            <span class="absolute -top-10 right-0 size-12 bg-star bg-no-repeat bg-contain"></span>
            Shorten urls made easy
        </h1>
        <p class="text-[0.95rem] text-textSecondary mt-2">Shorten, personalize and optimize your links to boost<br>your online presence
            and grow your business.</p>
       <div class="flex items-center gap-2 p-2 mt-2 bg-surface w-full max-w-[430px] rounded-full shadow-lg shadow-surfaceVariant">
           <i class="grid place-content-center ri-links-line ms-3 me-1 text-textPrimary text-[18px]"></i>
           <input class="text-[0.9rem] w-full outline-none border-none" type="text" placeholder="Paste a link to shorten it">
           <button class="text-sm text-white bg-primary px-5 py-2.5 rounded-full">Shorten</button>
       </div>
    </div>
    <div class="flex flex-col justify-center items-center w-full">
        <img class="w-full h-full object-contain" src="/images/hero.svg" style="-webkit-transform: scaleX(-1);transform: scaleX(-1);" alt="hero">
    </div>
</div>