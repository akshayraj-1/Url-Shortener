<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- block("head").toString() %>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/css/output.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
    <title><%= title || "Shortnx - URL Shortener" %></title>
</head>
<body>

<nav class="fixed top-0 z-10 flex justify-between items-center w-full py-5 px-6 sm:px-9 bg-colorBackground/80 backdrop-blur-xl select-none">
    <a href="/"><img class="h-6 md:h-7 object-contain" src="/images/logo.svg" alt="logo"/></a>

    <div class="flex items-center gap-2 cursor-pointer">
        <img class="size-7 object-cover rounded-full" src="<%= user.picture || "/images/user_avatar.png"%>" alt="Profile"/>
        <span class="text-sm text-textPrimary/80 font-medium"><%= user.name %></span>
    </div>
</nav>
<div class="flex h-screen">
    <%# Sidebar%>
    <div class="flex flex-col h-screen overflow-y-auto px-6 pt-20">
        <div class="flex">
            <i class="ri-dashboard-2-line"></i>
        </div>
    </div>
    <div class="relative flex flex-col w-full">
        <%- body -%>
    </div>
</div>

<script src='/Toast.js'></script>
<%- block("scripts").toString() %>
</body>
</html>