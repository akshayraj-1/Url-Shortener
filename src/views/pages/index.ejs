<%- layout('layout/boilerplate') -%>

<div id="modal-url" class="fixed z-[60] flex justify-center items-center h-screen w-screen bg-black/70 backdrop-blur-[4px]">
    <div class="flex flex-col px-6 py-5 mx-6 w-full max-w-[370px] bg-surface rounded-lg">
        <i class="grid place-content-center ri-close-line self-end text-xl text-textSecondary cursor-pointer"></i>
        <h3 class="self-center text-xl font-semibold">Share this link</h3>
        <div class="flex justify-evenly items-center mt-8">
            <i class="ri-facebook-fill grid place-content-center text-blue-600 text-2xl size-20 bg-surfaceVariant/40 border border-textTertiary/50 rounded-full cursor-pointer"></i>
            <i class="ri-twitter-fill grid place-content-center text-blue-400 text-2xl size-20 bg-surfaceVariant/40 border border-textTertiary/50 rounded-full cursor-pointer"></i>
            <i class="ri-chat-3-fill grid place-content-center text-gray-700 text-2xl size-20 bg-surfaceVariant/40 border border-textTertiary/50 rounded-full cursor-pointer"></i>
        </div>
        <div class="flex justify-center items-center gap-2 my-8 mx-6 px-4 py-2.5 rounded-md bg-surfaceVariant/50 border border-textTertiary/40">
            <span class="text-sm text-textSecondary w-full overflow-ellipsis">https://localhost:3939/ssfras23</span>
            <i class="ri-file-copy-line cursor-pointer"></i>
        </div>
    </div>
</div>

<div class="relative grid grid-cols-1 lg:grid-cols-2 gap-12 px-6 md:px-40 h-full w-full min-h-screen py-40">

    <div class="flex flex-col justify-center items-start gap-5 h-full w-full">
        <h1 class="relative text-[55px] md:text-[5.1rem] leading-none font-gelica-black font-bold">
            <span class="absolute -top-8 right-0 size-12 bg-star bg-no-repeat bg-contain"></span>
            Shorten urls made easy
        </h1>
        <p class="text-base text-textSecondary mt-2">Shorten, personalize and optimize your links to boost<br>your online presence
            and grow your business.</p>
       <div class="flex items-center gap-2 p-2.5 mt-3 bg-surface w-full max-w-[440px] rounded-full border border-textTertiary/50 shadow-lg shadow-textTertiary/10">
           <i class="grid place-content-center ri-links-line ms-3 me-1 text-textPrimary text-[20px]"></i>
           <input class="text-[0.95rem] w-full outline-none border-none" type="text" placeholder="Paste a link to shorten it">
           <button class="text-sm text-white bg-primary px-6 py-3 rounded-full">Shorten</button>
       </div>
    </div>

    <div class="flex flex-col justify-center items-center w-full">
        <img class="w-full h-full object-contain select-none" draggable="false" src="/images/hero.svg" alt="hero">
    </div>

</div>

<%- block("scripts").append(`
<script>
    const modal = document.querySelector('#modal-url');

</script>
`) -%>