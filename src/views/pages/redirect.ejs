<!doctype html>
<html lang="<%= meta.lang || 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <meta property="og:title" content="<%= meta.title || 'Redirecting...' %>">
    <meta property="og:description" content="<%= meta.description || 'You are being redirected.' %>">
    <meta property="og:image" content="<%= meta.image || '/default-thumbnail.jpg' %>">
    <meta property="og:url" content="<%= url %>">
    <link rel="icon" type="image/x-icon" href="<%= meta.icon || '/favicon.ico' %>">
    <title><%= meta.title || 'Redirecting...' %></title>
</head>
<body>
<script>
    window.onload = () => {
        window.location.replace("<%= url %>");
    }
</script>
</body>
</html>